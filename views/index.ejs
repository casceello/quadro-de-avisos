<!-- Incluir o head -->

<%- include('./partials/head') %>


<body>

  <!-- menu -->

  <%- include('./partials/navbar') %>

  <div class="container">

    <% avisos.forEach(aviso => { %>

      <div class="card shadow mt-4">
        <div class="card-header bg-grey text-white pl-4 pt-3 d-flex align-items-center justify-content-between"> 
          
          <h2> <i class="fas fa-comment"></i> <%= aviso.titulo %> </h2>
  
          <h3 class="lead"><%= moment(aviso.data).format("DD/MM/YYYY") %> </h3>
        
        </div>
        
        <div class="card-body p-5">
          <!--info perfil-->
          <div class="d-flex align-items-center"> 
            
            <img src="img/pauloculos.png" class="img-thumbnail rounded-circle" width="75px">
          
            <div class="ml-2">
  
            <div class="font-weight-bold">Paulinho Apenas Né Cara</div>
            <div class="text-secondary"> <%= moment(aviso.data, "YYYYMMDD").fromNow(); %>  
            </div>

            </div>
           
          </div><!--fim infoperfil-->
            
            <div class="mt-4"> <!-- descriçao do aviso-->
       
              <%=aviso.mensagem%>
  
            </div>
  
  
        </div> <!--card body-->
      
      
      </div> <!--card -->


      <% }) %>

  


  </div> <!--container-->

  <!-- incluir os scripts do bootstrap -->
  <%- include('./partials/script_import.ejs') %>
</body>

</html>