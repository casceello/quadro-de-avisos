<!-- Incluir o head -->

<%- include('./partials/head') %>


<body>

  <!-- menu -->

  <%- include('./partials/navbar') %>

  <div class="container">

    <br><br>

    <a href=#> <i class="fas fa-arrow-left"></i> Voltar</a> <br><br>

    <% if (typeof msg !== 'undefined') { %>
    <% if (msg.tipo === 'sucesso') { %>

      <div class="alert alert-success alert-dismissible fade show p-3" role="alert">
        <strong> <i class="far fa-check-circle"></i> Sucesso!</strong> 
        <%= msg.corpo %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>  

    </div>

    <% } %>
    <!-- Fim do if sucesso -->
    <% if (msg.tipo === 'erro') { %>

      <div class="alert alert-danger alert-dismissible fade show p-3" role="alert">
        <strong> <i class="fas fa-exclamation-triangle"></i> Erro!</strong> 
        <%= msg.corpo %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>  

    </div>
    <% } %>
    <!-- Fim do if erro -->
    <% } %>
    <!-- Fim do if typeof -->

   

    <div class="card shadow ">
      <div class="card-header bg-grey text-white pl-4 pt-3"> 
        
        <h2> <i class="fas fa-plus-square"></i> Novo Aviso</h2>
      
      </div>
      
      <div class="card-body p-5">
        <form action="/avisos/novo" method="POST">
          <div class="form-group">
            <label for="titulo">Titulo</label>
            <input id="titulo" name="titulo" type="text" class="form-control" required placeholder="Digite o tÃ­tulo">
          </div>
          <div class="form-group">
            <label for="data">Data</label>
            <input id="data" name="data" type="date" class="form-control">
          </div>
          <div class="form-group">
            <label for="mensagem">Mensagem</label>
            <textarea id="mensagem" name="mensagem" cols="40" rows="5" class="form-control" required placeholder="Digite a mensagem" ></textarea>
          </div>
          <div class="form-group">
            <button name="submit" type="submit" class="btn btn-primary">Cadastrar</button>
            <button name="submit" type="submit" class="btn btn-secondary">Limpar</button>
          </div>
        </form>
    
      </div> <!--card body-->
    
    
    </div> <!--card -->


  </div> <!--container-->

  <!-- incluir os scripts do bootstrap -->
  <%- include('./partials/script_import.ejs') %>
</body>

</html>